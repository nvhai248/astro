---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import PixelCard from '../../components/PixelCard.astro';
import FilterTabs from '../../components/FilterTabs.astro';
import { getBlogPosts } from '../../lib/notion';

const blogPosts = await getBlogPosts();
const categories = [...new Set(blogPosts.map(p => p.category).filter(Boolean))];
---

<Layout title="Blog - Portfolio" description="Read my thoughts on technology, development, and personal insights">
  <div class="min-h-screen flex flex-col">
    <Header />
    
    <main class="flex-1 py-pixel-4 px-4">
      <div class="container mx-auto">
        <h1 class="font-pixel text-lg md:text-2xl text-accent mb-pixel-4 text-center">
          &gt; BLOG POSTS_
        </h1>
        
        <p class="font-mono text-gray-light text-center mb-pixel-4 max-w-2xl mx-auto">
          Technical tutorials, personal insights, and thoughts on the latest in technology.
        </p>
        
        <!-- Filter Tabs -->
        <FilterTabs categories={categories} />
        
        <!-- Blog Posts Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-pixel-3" id="blog-grid">
          {blogPosts.map(post => (
            <div data-category={post.category}>
              <PixelCard 
                title={post.title}
                description={post.excerpt}
                image={post.image}
                category={post.category}
                date={post.date}
                href={`/blog/${post.id}`}
                featured={post.featured}
              />
            </div>
          ))}
        </div>
        
        {blogPosts.length === 0 && (
          <div class="text-center py-pixel-4">
            <p class="font-pixel text-gray-pixel text-xs">
              NO BLOG POSTS FOUND. CHECK NOTION INTEGRATION.
            </p>
          </div>
        )}
      </div>
    </main>
    
    <Footer />
  </div>
</Layout>